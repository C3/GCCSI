@model IEnumerable<GCCSI_CO2RE.Models.COREUpdates>

@{
    ViewBag.Title = "CO2RE Updates";
}
<div style="display:none" id="gccsiSection">@ViewBag.Title</div>


<div class="container-fluid">
    <div class="row px-3 d-flex align-items-center">
        <div class="col-md-6">
            <div class="d-flex">
                <ul class="breadcrumb my-3" style="margin-bottom:0px;margin-top:0px">
                    <li class="breadcrumb-item">
                        <a href="/">Home</a>
                    </li>
                    <li class="breadcrumb-item active" id="indexBreadcrum">CO<sub>2</sub>RE Updates</li>
                </ul>
            </div>
        </div>
        <div class="col-md-6">

        </div>
    </div>
</div>


<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 my-3">

            <div class="datatable-wide" style="padding-left: 0; padding-right: 0">
                <br />
                <div style="width:100%">

                    <table id="updatesGrid" class="table table-striped table-bordered dt-responsive wrap" cellspacing="0">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Area.AreaName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Title)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UpdateDateTime)
                                </th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Area.AreaName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>       
                                <td>
                                    @Html.DisplayFor(modelItem => item.UpdateDateTime)
                                </td>
                            </tr>
                        }

                    </table>

                    <div id="dialog-confirm" style="display: none">
                        <p>
                            <span class="ui-icon ui-icon-alert" style="float: left; margin: 0 7px 20px 0;"></span>
                            Are you sure to delete ?
                        </p>
                    </div>
                    <div id="dialog-edit" style="display: none">
                    </div>
                    <div id="dialog-create" style="display: none">
                    </div>
                    <div id="dialog-view" style="display: none">
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>



@Scripts.Render("~/Scripts/dataEntryShared.js")

<script>

    $('#updatesGrid').DataTable({
        responsive: true,
        searching: true,
        autoWidth: false
    });
</script>