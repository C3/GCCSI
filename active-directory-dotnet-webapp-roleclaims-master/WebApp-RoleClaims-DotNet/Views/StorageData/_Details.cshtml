@using GCCSI_CO2RE.Models

@model GCCSI_CO2RE.Models.StorageData

@using (Html.BeginForm())
{ 
    <div>
        <fieldset>

            @if (ViewBag.IsUpdate == true)

            {

                @Html.HiddenFor(model => model.StorageDataID)

            }


            <table id="editableGrid" class="table table-striped table-bordered dt-responsive wrap" cellspacing="0" style="table-layout:fixed; font-size:12px; margin-top:1.5rem" >
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.RegionID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CountryID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ConventionalStoragePotential)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RegionalPotential)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RegionalAssessment)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Dataset)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AssessmentMaturity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Injection)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CommercialScaleInjection)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.KnowledgeDissemination)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.YearID)
                        </th>
                    </tr>
                </thead>             
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => modelItem.Region.RegionName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => modelItem.Country.CountryName)
                        </td>
                        <td style="text-align:right">
                            @(Model.ConventionalStoragePotential == null ? "-" : Model.ConventionalStoragePotential.Value == true ? "Yes" : "No")
                        </td>
                        <td style="text-align:right">
                            @Html.DisplayFor(modelItem => modelItem.RegionalPotentialCriteria.StorageCriteriaCode)
                        </td>
                        <td style="text-align:right">
                            @Html.DisplayFor(modelItem => modelItem.RegionalAssessmentCriteria.StorageCriteriaCode)
                        </td>
                        <td style="text-align:right">
                            @Html.DisplayFor(modelItem => modelItem.DatasetCriteria.StorageCriteriaCode)
                        </td>
                        <td style="text-align:right">
                            @Html.DisplayFor(modelItem => modelItem.AssessmentMaturityCriteria.StorageCriteriaCode)
                        </td>
                        <td style="text-align:right">
                            @Html.DisplayFor(modelItem => modelItem.InjectionCriteria.StorageCriteriaCode)
                        </td>
                        <td style="text-align:right">
                            @Html.DisplayFor(modelItem => modelItem.CommercialScaleInjectionCriteria.StorageCriteriaCode)
                        </td>
                        <td style="text-align:right">
                            @Html.DisplayFor(modelItem => modelItem.KnowledgeDisseminationCriteria.StorageCriteriaCode)
                        </td>
                        <td style="text-align:right">
                            @Html.DisplayFor(modelItem => modelItem.Year.YearName)
                        </td>
                    </tr>
            </table>
            
            <div>
                <div class="editor-label">

                    @Html.LabelFor(model => model.Summary)

                </div>

                <div class="editor-field" style="font-size:12px">

                    @Html.TextAreaFor(model => model.Summary, new { @id="summaryEntry", @class = "form-control" })

                    @Html.ValidationMessageFor(model => model.Summary)

                </div>


                <div class="editor-label">

                    Notes

                </div>

                <div class="editor-field" style="font-size:12px">

                    @Html.TextAreaFor(model => model.Note, new { @id = "noteEntry", @class = "form-control" })

                    @Html.ValidationMessageFor(model => model.Note)

                </div>
            </div>

            <p style="margin-top:1.5rem">

                <input type="button" value="Close" id="btncancelView" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" />

            </p>

        </fieldset>
        </div>

        <script type="text/javascript">
            $(document).ready(function () {
                $('textarea').each(function () {
                    this.setAttribute('style', 'height:' + (this.scrollHeight) + 'px;');
                    this.setAttribute('readonly', true);
                }).on('input', function () {
                    this.style.height = 'auto';
                    this.style.height = (this.scrollHeight) + 'px';
                });
            });
        </script>
}