@model IEnumerable<GCCSI_CO2RE.Models.RD_PolicyStatus>
@{
    Layout = null;
}

<div style="text-align:right">
    @Html.ActionLink("Create New", "AddEditPolicyStatus", null, new { @id = "createDialog", @class = "btn btn-primary pi-draggable" })
</div>

<div class="datatable-wide" style="padding-left: 0; padding-right: 0">
    <br />
    <div style="width:100%">
        <table id="polStatusGrid" class="table table-striped table-bordered dt-responsive wrap" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PolicyStatusName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PolicyStatusScore)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PolicyStatusName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PolicyStatusScore)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "AddEditPolicyStatus", new { id = item.PolicyStatusID }, new { @class = "editDialog" }) |
                        @Html.ActionLink("Details", "PolicyStatusDetails", new { id = item.PolicyStatusID }, new { @class = "detailsDialog" }) |
                        @Html.ActionLink("Delete", "DeletePolicyStatus", new { id = item.PolicyStatusID }, new { @class = "confirmDialog" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

<script>
    $('#polStatusGrid').DataTable({
        responsive: true,
        searching: false,
        autoWidth: true
    });
</script>
