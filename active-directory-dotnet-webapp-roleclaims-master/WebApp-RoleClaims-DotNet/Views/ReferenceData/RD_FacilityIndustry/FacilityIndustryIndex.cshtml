@model IEnumerable<GCCSI_CO2RE.Models.RD_FacilityIndustry>

@{
    Layout = null;
}


<div style="text-align:right">
    @Html.ActionLink("Create New", "AddEditFacilityIndustry", null, new { @id = "createDialog", @class = "btn btn-primary pi-draggable" })
</div>

<div class="datatable-wide" style="padding-left: 0; padding-right: 0">
    <br />
    <div style="width:100%">
        <table id="facilityIndustryGrid" class="table table-striped table-bordered dt-responsive wrap" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FacilityIndustryName)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FacilityIndustryName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "AddEditFacilityIndustry", new { id = item.FacilityIndustryID }, new { @class = "editDialog" }) |
                        @Html.ActionLink("Details", "FacilityIndustryDetails", new { id = item.FacilityIndustryID }, new { @class = "detailsDialog" }) |
                        @Html.ActionLink("Delete", "DeleteFacilityIndustry", new { id = item.FacilityIndustryID }, new { @class = "confirmDialog" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

<script>
    $('#facilityIndustryGrid').DataTable({
        responsive: true,
        searching: false,
        autoWidth: true
    });
</script>