@model IEnumerable<GCCSI_CO2RE.Models.RD_StorageCriteria>
@{
    Layout = null;
}

<div style="text-align:right">
    @Html.ActionLink("Create New", "AddEditStorageCriteria", null, new { @id = "createDialog", @class = "btn btn-primary pi-draggable" })
</div>

<div class="datatable-wide" style="padding-left: 0; padding-right: 0">
    <br />
    <div style="width:100%">
        <table id="storageGrid" class="table table-striped table-bordered dt-responsive wrap" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.StorageCriteriaCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StorageCriteriaValue)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StorageCriteriaCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StorageCriteriaValue)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "AddEditStorageCriteria", new { id = item.StorageCriteriaID }, new { @class = "editDialog" }) |
                        @Html.ActionLink("Details", "StorageCriteriaDetails", new { id = item.StorageCriteriaID }, new { @class = "detailsDialog" }) |
                        @Html.ActionLink("Delete", "DeleteStorageCriteria", new { id = item.StorageCriteriaID }, new { @class = "confirmDialog" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

<script>
    $('#storageGrid').DataTable({
        responsive: true,
        searching: false,
        autoWidth: true
    });
</script>