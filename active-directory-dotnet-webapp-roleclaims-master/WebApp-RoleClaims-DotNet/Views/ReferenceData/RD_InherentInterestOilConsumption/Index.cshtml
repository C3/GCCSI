@model IEnumerable<GCCSI_CO2RE.Models.RD_InherentInterestOilConsumption>
@{
    Layout = null;
}

<div style="text-align:right">
    @Html.ActionLink("Create New", "AddEditInherentOilConsumption", null, new { @id = "createDialog", @class = "btn btn-primary pi-draggable" })
</div>

<div class="datatable-wide" style="padding-left: 0; padding-right: 0">
    <br />
    <div style="width:100%">
        <table id="oilConsGrid" class="table table-striped table-bordered dt-responsive wrap" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.OilConsumptionPercentageShare)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OilConsumptionScore)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OilConsumptionBand)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OilConsumptionTier)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OilConsumptionPercentageShare)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OilConsumptionScore)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OilConsumptionBand)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OilConsumptionTier)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "AddEditInherentOilConsumption", new { id = item.InherentInterestOilConsumptionID }, new { @class = "editDialog" }) |
                        @Html.ActionLink("Details", "InherentOilConsumptionDetails", new { id = item.InherentInterestOilConsumptionID }, new { @class = "detailsDialog" }) |
                        @Html.ActionLink("Delete", "DeleteInherentOilConsumption", new { id = item.InherentInterestOilConsumptionID }, new { @class = "confirmDialog" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

<script>
    $('#oilConsGrid').DataTable({
        responsive: true,
        searching: false,
        autoWidth: true
    });
</script>