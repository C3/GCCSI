@model IEnumerable<GCCSI_CO2RE.Models.RD_PolicyType>

<div style="text-align:right">
    @Html.ActionLink("Create New", "AddEditPolicyType", null, new { @id = "createDialog", @class = "btn btn-primary pi-draggable" })
</div>

<div class="datatable-wide" style="padding-left: 0; padding-right: 0">
    <br />
    <div style="width:100%">
        <table id="policyTypeGrid" class="table table-striped table-bordered dt-responsive wrap" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PolicyTypeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PreCommercialDemoPercentage)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DeploymentPercentage)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PolicyTypeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PreCommercialDemoPercentage)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeploymentPercentage)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "AddEditPolicyType", new { id = item.PolicyTypeID }, new { @class = "editDialog" }) |
                        @Html.ActionLink("Details", "PolicyTypeDetails", new { id = item.PolicyTypeID }, new { @class = "detailsDialog" }) |
                        @Html.ActionLink("Delete", "DeletePolicyType", new { id = item.PolicyTypeID }, new { @class = "confirmDialog" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

<script>
    $('#policyTypeGrid').DataTable({
        responsive: true,
        searching: false,
        autoWidth: true
    });
</script>