@model IEnumerable<GCCSI_CO2RE.Models.RD_Year>
@{
    Layout = null;
}

<div style="text-align:right">
    @Html.ActionLink("Create New", "AddEditYear", null, new { @class = "createDialogButton btn btn-primary pi-draggable" })
</div>

<div class="datatable-wide" style="padding-left: 0; padding-right: 0">
    <br />
    <div style="width:100%">
        <table id="yearGrid" class="table table-striped table-bordered dt-responsive wrap" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.YearName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.YearStartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.YearEndDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.YearHasData)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.YearName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.YearStartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.YearEndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.YearHasData)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "AddEditYear", new { id = item.YearID }, new { @class = "editDialog" }) |
                        @Html.ActionLink("Details", "YearDetails", new { id = item.YearID }, new { @class = "detailsDialog" }) |
                        @Html.ActionLink("Delete", "DeleteYear", new { id = item.YearID }, new { @class = "confirmDialog" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

<script>
    $('#yearGrid').DataTable({
        responsive: true,
        searching: false,
        autoWidth: true
    });
</script>


       
