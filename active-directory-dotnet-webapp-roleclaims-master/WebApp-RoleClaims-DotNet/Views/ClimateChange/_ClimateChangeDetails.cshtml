@using GCCSI_CO2RE.Models

@model GCCSI_CO2RE.Models.ClimateChangeData

@using (Html.BeginForm())
{ 
    <div>
        <fieldset>

            @if (ViewBag.IsUpdate == true)

            {

                @Html.HiddenFor(model => model.ClimateChangeDataID)

            }


            <table id="editableGrid" class="table table-striped table-bordered dt-responsive wrap" cellspacing="0" style="table-layout:fixed; font-size:12px; margin-top:1.5rem">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Region.RegionName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Country.CountryName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PercentageReduction)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BaseYear)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TargetYear)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Year)
                        </th>
                    </tr>
                </thead>       
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.Region.RegionName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.Country.CountryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.PercentageReduction)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.BaseYear)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.TargetYear)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.Year.YearName)
                    </td>
                </tr>
            </table>
            
            <div>
                <div class="editor-label">

                    @Html.LabelFor(model => model.KeyMechanismsInNDC)

                </div>

                <div class="editor-field" style="font-size:12px">

                    @Html.TextAreaFor(model => model.KeyMechanismsInNDC, new { @class = "form-control" })

                    @Html.ValidationMessageFor(model => model.KeyMechanismsInNDC)

                </div>

                <div class="editor-label">

                    @Html.LabelFor(model => model.Summary)

                </div>

                <div class="editor-field" style="font-size:12px">

                    @Html.TextAreaFor(model => model.Summary, new { @id="summaryEntry", @class = "form-control" })

                    @Html.ValidationMessageFor(model => model.Summary)

                </div>

                <div class="editor-label">

                    @Html.LabelFor(model => model.Source)

                </div>

                <div class="editor-field" style="font-size:12px">

                    @Html.TextAreaFor(model => model.Source, new { @class = "form-control" })

                    @Html.ValidationMessageFor(model => model.Source)

                </div>

                <div class="editor-label">

                    Notes

                </div>

                <div class="editor-field" style="font-size:12px">

                    @Html.TextAreaFor(model => model.Note, new { @id = "noteEntry", @class = "form-control" })

                    @Html.ValidationMessageFor(model => model.Note)

                </div>
            </div>

            <p style="margin-top:1.5rem">

                <input type="button" value="Close" id="btncancelView" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" />

            </p>

        </fieldset>
        </div>

        <script type="text/javascript">
            $(document).ready(function () {
                $('textarea').each(function () {
                    this.setAttribute('style', 'height:' + (this.scrollHeight) + 'px;');
                    this.setAttribute('readonly', true);
                }).on('input', function () {
                    this.style.height = 'auto';
                    this.style.height = (this.scrollHeight) + 'px';
                });
            });
        </script>
}