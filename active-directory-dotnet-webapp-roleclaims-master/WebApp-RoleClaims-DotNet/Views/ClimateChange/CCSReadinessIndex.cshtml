@model IEnumerable<GCCSI_CO2RE.Models.CCSReadinessIndexData>

@{
    ViewBag.Title = "CCS Readiness Index";
}




<div id="yearAndCreateCCSReady" style="display:flex;align-items: flex-end; flex-direction:column;">
    <div style="display:flex; flex-flow:row; align-items:center ">
        <div id="createRowDiv" class="my-2 d-flex justify-content-end" style="padding-right:10px">
            @Html.ActionLink("Create New", "AddEditCCSReadiness", null, new { @class = "createDialogButton btn btn-primary pi-draggable" })
        </div>
        <div>
            <div class="d-flex justify-content-end align-items-center">
                <div style="font-size:20pt;">
                    <b>
                        Year:&nbsp;
                    </b>
                </div>
                <select id="yearFilterCCS" class="dropdownoption">
                    <option value="All">All</option>
                    @foreach (var year in ViewBag.PossibleYears)
                    {
                        <option value="@year.YearName">@year.YearName</option>
                    }
                </select>
            </div>
        </div>
    </div>
</div>



<div class="datatable-wide" style="padding-left: 0; padding-right: 0">
    <br />
    <div style="width:100%">
        <table id="ccsReadyGrid" class="table table-striped table-bordered dt-responsive wrap" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Country.CountryName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Region.RegionName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Year.YearName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PolicyScore)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StorageScore)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LegalRegulatoryScore)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CCSReadinessIndexScore)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Summary)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Note)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Year)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country.CountryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Region.RegionName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year.YearName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PolicyScore)
                    </td>>
                    <td>
                        @Html.DisplayFor(modelItem => item.StorageScore)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LegalRegulatoryScore)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CCSReadinessIndexScore)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Summary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Note)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year.YearName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "AddEditCCSReadiness", new { id = item.ReadinessIndexDataID }, new { @class = "editDialog" }) |
                        @Html.ActionLink("Details", "CCSReadinessDetails", new { id = item.ReadinessIndexDataID }, new { @class = "detailsDialog" }) |
                        @Html.ActionLink("Delete", "CCSReadinessDelete", new { id = item.ReadinessIndexDataID }, new { @class = "confirmDialog" })
                    </td>
                </tr>
            }

        </table>

    </div>
</div>





@Scripts.Render("~/Scripts/dataEntryShared.js")
<script>
    $('#ccsReadyGrid').DataTable({
        responsive: true,
        searching: true,
        autoWidth: false
    });


    $(document).ready(function () {
        //Assurance to hide column.
        var table = $('#ccsReadyGrid').DataTable();
        var column = table.column(9);
        column.visible(false);

        //Add on change function.
        $("#yearFilterCCS").change(function () {
            //On the user change of year filter we want to update the table.
            var yearWanted = document.getElementById("yearFilterCCS").value;
            var table = $('#ccsReadyGrid').dataTable();
            if (yearWanted == "All") {
                table.fnFilter("", 9, false)
            }
            else {
                table.fnFilter(yearWanted, 9);
            }
        });

        //Once the page has loaded -- try to select current year from year selection.
        $("#yearFilterCCS").val("All");

        var $x = $('#ccsReadyGrid_filter');
        $x.replaceWith($("#yearAndCreateCCSReady"));

    });

</script>