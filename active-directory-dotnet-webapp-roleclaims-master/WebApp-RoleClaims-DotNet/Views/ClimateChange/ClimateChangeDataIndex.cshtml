@model IEnumerable<GCCSI_CO2RE.Models.ClimateChangeData>

@{
    ViewBag.Title = "Climate Change Data";
}


<div id="yearAndCreate" style="display:flex;align-items: flex-end; flex-direction:column;" >
    <div style="display:flex; flex-flow:row; align-items:center ">
        <div id="createRowDiv" class="my-2 d-flex justify-content-end" style="padding-right:10px">
            @Html.ActionLink("Create New", "AddEditClimateChangeInitiativeRecord", null, new { @class = "createDialogButton btn btn-primary pi-draggable" })
        </div>
        <div>
            <div class="d-flex justify-content-end align-items-center">
                <div style="font-size:20pt;">
                    <b>
                        Year:&nbsp;
                    </b>
                </div>
                <select id="yearFilter" class="dropdownoption">
                    <option value="All">All</option>
                    @foreach (var year in ViewBag.PossibleYears)
                    {
                        <option value="@year.YearName">@year.YearName</option>
                    }
                </select>
            </div>
        </div>
    </div>
</div>


<div class="datatable-wide" style="padding-left: 0; padding-right: 0">
    <br />
    <div style="width:100%">

        <table id="climateChangeTable" class="table table-striped table-bordered dt-responsive wrap" cellspacing="0">
            <thead style="font-size:12px">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Region.RegionName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Country.CountryName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Summary)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PercentageReduction)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BaseYear)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TargetYear)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Source)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Note)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.KeyMechanismsInNDC)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Year.YearName)
                    </th>
                    <th>Actions</th>
                </tr>
                </thead>    

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Region.RegionName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Country.CountryName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Summary)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PercentageReduction)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BaseYear)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TargetYear)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Source)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Note)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.KeyMechanismsInNDC)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Year.YearName)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "AddEditClimateChangeInitiativeRecord", new { id = item.ClimateChangeDataID }, new { @class = "editDialog" }) |
                            @Html.ActionLink("Details", "ClimateChangeInitiativeDetails", new { id = item.ClimateChangeDataID }, new { @class = "detailsDialog" }) |
                            @Html.ActionLink("Delete", "ClimateChangeInitiativeDelete", new { id = item.ClimateChangeDataID }, new { @class = "confirmDialog" })
                        </td>
                    </tr>
                }

</table>

    </div>
</div>



@Scripts.Render("~/Scripts/dataEntryShared.js")

<script>

    $('#climateChangeTable').DataTable({
        responsive: true,
        searching: true,
        autoWidth: false
    });


    $(document).ready(function () {
        //Assurance to hide column.
        var table = $('#climateChangeTable').DataTable();
        var column = table.column(9);
        column.visible(false);

        //Add on change function.
        $("#yearFilter").change(function () {
            //On the user change of year filter we want to update the table.
            var yearWanted = document.getElementById("yearFilter").value;
            var table = $('#climateChangeTable').dataTable();
            if (yearWanted == "All") {
                table.fnFilter("", 9, false)
            }
            else {
                table.fnFilter(yearWanted, 9);
            }
        });

        //Once the page has loaded -- try to select current year from year selection.
        $("#yearFilter").val("All");

        var $x = $('#climateChangeTable_filter');
        $x.replaceWith($("#yearAndCreate"));

    });
</script>